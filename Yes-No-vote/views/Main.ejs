    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="../Public/js/animations.js"></script>
    <script>
      var data=document.getElementById('data').innerHTML;
      var gdata=document.getElementById('data2').innerHTML;
      Chart.defaults.color="#000000";
      var xlab=["Yes","No"];
      var ydata=[data,gdata];
      var barColor=[
      "#b91d47",
  "#00aba9" 
      ]
      new Chart("graph",
      {
        type:"pie",
        data:{
          labels:xlab,
          datasets:[{
            backgroundColor: barColor,
           data: ydata
          }]
        }
        ,
        options:{
         title:{
          display:true,
          text:"Vote Results"
         }
        }
      })
    </script>
     
